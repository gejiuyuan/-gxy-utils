{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "lib": [
      "ESNext",
      "DOM"
    ],
    "rootDir": "lib",
    "outDir": "dist",
    "baseUrl": "./",
    "paths": {},
    "downlevelIteration": true,
    "isolatedModules": true,
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": false,
    "forceConsistentCasingInFileNames": true,
    "removeComments": true
  },
  "include": [
    "lib/**/*.ts",
    "lib/**/*.d.ts",
    "lib/shared/constant"
  ],
  "exclude": [
    "__test__/**/*.ts"
  ]
}